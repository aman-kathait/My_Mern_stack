<%- include('partials/nav') %>
</head>
<body class="bg-gray-50 font-sans flex flex-col min-h-screen">
    <%- include('partials/head') %>

  <!-- Main Content -->
  <main class="flex-grow flex items-center justify-center">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full text-center">
      <h2 class="text-3xl font-bold text-blue-600 mb-4">Welcome to Hamara Airbnb</h2>
      <p class="text-gray-700 mb-6">Discover unique places to stay and experiences to make your trip unforgettable.</p>
      <a href="/host/add-home" class="bg-blue-500 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-200">Add Your Home</a>

      <!-- Homes List -->
      <div class="mt-8 space-y-4">
        <% homes.forEach(home => { %> 
          <div class="border rounded-lg p-4 shadow hover:shadow-lg transition duration-200">
            <h3 class="text-xl font-semibold text-blue-600"><%= home.houseName %></h3>
          </div>
        <% }); %>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white shadow mt-8">
    <div class="max-w-7xl mx-auto px-6 py-4 text-center text-gray-600">
      &copy; 2024 Hamara Airbnb. All rights reserved.
    </div>
  </footer>
  
</body>
</html>
